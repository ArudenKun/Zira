<UserControl
    x:Class="Zira.Views.MainView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:zira="https://github.com/arudenkun/Zira"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="zira:MainViewModel"
    mc:Ignorable="d">
    <suki:SukiSideMenu
        IsMenuExpanded="True"
        IsSearchEnabled="False"
        ItemsSource="{Binding Pages}"
        SelectedItem="{Binding Page}"
        SidebarToggleEnabled="False">
        <suki:SukiSideMenu.ItemTemplate>
            <DataTemplate>
                <!--  ReSharper disable once Xaml.StyleClassNotFound  -->
                <suki:SukiSideMenuItem
                    Classes="Compact"
                    Header="{Binding DisplayName}"
                    IsVisible="{Binding IsVisibleOnSideMenu}">
                    <suki:SukiSideMenuItem.Icon>
                        <LucideIcon
                            Width="20"
                            Height="20"
                            Kind="{Binding IconKind}" />
                    </suki:SukiSideMenuItem.Icon>
                </suki:SukiSideMenuItem>
            </DataTemplate>
        </suki:SukiSideMenu.ItemTemplate>
        <suki:SukiSideMenu.HeaderContent>
            <!--  ReSharper disable once Xaml.StyleClassNotFound  -->
            <Image
                Width="80"
                Height="80"
                Margin="30,20,30,30"
                Classes="AppIcon"
                Source="/Assets/avalonia-logo.ico" />
        </suki:SukiSideMenu.HeaderContent>
    </suki:SukiSideMenu>
</UserControl>